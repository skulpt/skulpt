{
    "fileExtensions": [ ".js", "jscs" ],
    "disallowMixedSpacesAndTabs": true,
    "validateIndentation": 4,
    "requireCurlyBraces": [
        "if",
        "else",
        "for",
        "while",
        "do",
        "try",
        "catch"
    ],
    "requireSemicolons": true,
    "disallowNewlineBeforeBlockStatements": true,
    "disallowKeywordsOnNewLine": [
        "else"
    ],
    "excludeFiles": [
        "src/tokenize.js",
        "src/symtable.js",
        "src/compile.js",
        "src/ast.js"
    ],
    "validateQuoteMarks": { "mark": "\"", "escape": true }
}
